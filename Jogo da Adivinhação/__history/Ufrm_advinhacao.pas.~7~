procedure TFrm_Numeros.RadioGroup1Click(Sender: TObject);
begin
case Rdg_Nivel.ItemIndex of
 0:
 begin
    ValorMax := 50;
    Lbl_SegundoValor.Caption := '50' ;
 end;

  1:
 begin
    ValorMax := 100;
    Lbl_SegundoValor.Caption := '100';
 end;

  2:
  begin
    ValorMax := 1000;
    Lbl_SegundoValor.Caption := '1000';
 end;
end;

