{$R *.dfm}

procedure LerArquivo;
var
  arq: TextFile;
  linha: string;
begin
  AssignFile(arq, 'C:\meuarquivo.txt');
  Reset(arq);
  while not Eof(arq) do
  begin
    Readln(arq, linha);
    ShowMessage(linha);
  end;
  CloseFile(arq);
end;


end.
